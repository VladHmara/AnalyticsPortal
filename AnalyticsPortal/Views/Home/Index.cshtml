}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/main.css" rel="stylesheet" />
<div style="width:80%; margin-top:130px">
    <div class="title">
        Orders
    </div>
    <div class="main">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="case">
                    <span class="case-title">Average check</span>
                    <div class="content">
                        <span class="count"><img src="~/images/tags.svg" />$16.35</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="case">
                    <span class="case-title">Amount money</span>
                    <div class="content">
                        <span class="count"><img src="~/images/wallet.svg"/>$152375.05</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="case">
                    <span class="case-title">Number of orders</span>
                    <div class="content">
                        <span class="count"><img src="~/images/bill.svg"/>9343</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <div class="case">
                    <span class="case-title">Total ordered items</span>
                    <div class="content">
                        <span class="count"><img src="~/images/rice-bowl.svg"/>15485</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="chart">
        <div class="head">
            <div class="chart-title">Orders diagramm</div>
            <div class="buttons">

                <div>
                    <label class="radio-inline"><input type="radio" name="type" checked>Number of orders</label>
                    <label class="radio-inline"><input type="radio" name="type">Money</label>
                </div>                
                <div>
                    <label class="radio-inline"><input type="radio" name="period" checked>Day</label>
                    <label class="radio-inline"><input type="radio" name="period">Week</label>
                    <label class="radio-inline"><input type="radio" name="period">Month</label>
                </div>
            </div>
        </div>
        <div class="chart-area">
            <div class="column">
                <div class="filling" style="height:10%"></div>
                <div class="count">
                    283
                </div>
            </div>
            <div class="column">
