@using AnalyticsPortal.ViewModels
@model OrdersViewModel

    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="block">
                <div class="block-title">Average check</div>
                <div class="content">
                    <div class="count"><img src="~/images/tags.svg" /> @Model.AverageCheck</div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="block">
                <div class="block-title">Amount money</div>
                <div class="content">
                    <div class="count"><img src="~/images/wallet.svg" /> @Model.AmountMoney</div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="block">
                <div class="block-title">Number of orders</div>
                <div class="content">
                    <div class="count"><img src="~/images/bill.svg" /> @Model.NumberOfOrders</div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="block">
                <div class="block-title">Total ordered items</div>
                <div class="content">
                    <div class="count"><img src="~/images/rice-bowl.svg" /> @Model.TotalOrderedItems</div>
                </div>
            </div>
        </div>
    </div>
    